package org.etri.slice.rules.room;

import org.etri.slice.commons.room.event.TemperatureChanged;
import org.etri.slice.commons.room.service.ElectronicFan;

global ElectronicFan electronicFan;

rule "Temperature Change Detection - 1"
	when
		$e: TemperatureChanged(temp.getValue() <= 10)
	then
		electronicFan.setLevel(0);
end

rule "Temperature Change Detection - 2"
	when
		$e: TemperatureChanged(temp.getValue() > 10 && temp.getValue() <= 20)
	then
		electronicFan.setLevel(1);
end

rule "Temperature Change Detection - 3"
	when
		$e: TemperatureChanged(temp.getValue() > 20 && temp.getValue() <= 30)
	then
		electronicFan.setLevel(2);
end

rule "Temperature Change Detection - 4"
	when
		$e: TemperatureChanged(temp.getValue() > 30)
	then
		electronicFan.setLevel(3);
end